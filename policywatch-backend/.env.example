# =========================
# Database
# =========================
DATABASE_URL=postgresql://postgres:YOUR_DB_PASSWORD@YOUR_SUPABASE_HOST:5432/postgres

# =========================
# CORS
# =========================
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# =========================
# Cron / internal auth
# =========================
CRON_KEY=your_strong_random_cron_key

# =========================
# Cloudflare (used for FL date extraction, etc.)
# =========================
CF_API_TOKEN=your_cloudflare_api_token
CF_ACCOUNT_ID=your_cloudflare_account_id

# =========================
# AI provider switch
# =========================
AI_PROVIDER=openai        # openai | hf | none

# =========================
# HuggingFace (optional)
# =========================
HF_MODEL=facebook/bart-large-cnn
HF_TOKEN=your_huggingface_token

# =========================
# AI safety / limits
# =========================
AI_DAILY_CALL_BUDGET=0    # 0 = unlimited
AI_TIMEOUT_SEC=20

# =========================
# OpenAI
# =========================
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4.1-mini

# =========================
# Pennsylvania Gov Newsroom (Coveo)
# =========================
PA_GOV_NEWSROOM_API=https://example.coveo.com/rest/search/v2
PA_GOV_NEWSROOM_METHOD=POST
PA_GOV_NEWSROOM_HEADERS={"Accept":"application/json","Content-Type":"application/json"}
PA_GOV_COVEO_TOKEN=your_coveo_token

# =========================
# Illinois App Search
# =========================
IL_APPSEARCH_URL=https://example.elastic-cloud.com/api/as/v1/engines/engine-name/search
IL_APPSEARCH_TOKEN=your_appsearch_token

# =========================
# Supabase (server-side only)
# =========================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SUPABASE_JWT_SECRET=your_jwt_secret
